@model Evento
@{
    ViewData["Title"] = "Apagar eventos";
}

<div class="text-center">
    <h3>
        Realmente deseja apagar o Evento (@Model.Titulo) ? 
    </h3>
</div>


<a class="btn btn-primary btn-block" role="button"  
    asp-controller="Eventos" asp-action="Index">Cancelar exclusão</a>

<a class="btn btn-danger btn-block" asp-route-id ="@Model.Id_Evento" asp-controller="Eventos" asp-action="ConfirmaExclusao">Confirmar exclusão</a>
