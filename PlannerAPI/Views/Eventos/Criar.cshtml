@model Evento

@{
    ViewData["Title"] = "Criar eventos";
}

    <h1 class="display-4">Cadastrar eventos</h1>
    
    <br />
<form asp-controller="Eventos" asp-action="Criar" method="post">
  <div class="form-group">
    <label for="Titulo">Titulo</label>
    <input type="text" asp-for="Titulo" class="form-control" id="titulo" placeholder="Descrição do Evento">
  </div>
  <div class="form-group">
  <label for="Data">Data</label>    
        @Html.EditorFor(model => model.Data_Hora, new {htmlAttributes = new {@class = "form-control data_hora"}})
  </div>
  <button type="submit" class="btn btn-primary btn-block">Salvar</button>
  <a type="submit" class="btn btn-secondary btn-block" asp-controller="Eventos" asp-action="Index" role="button" >Voltar</a>
</form>
