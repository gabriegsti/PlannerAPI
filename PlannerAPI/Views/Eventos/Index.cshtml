
@{
    ViewData["Title"] = "Eventos";
}

<div class="text-center">  
    <h1 class="display-4">Eventos</h1>
  @using(Html.BeginForm("Index", "Eventos")) 
  {
   <label for="texto">Search in the name</label>
   <input type="text" name="texto" id="textoid" class="col-md-3"/>
   <input class="btn btn-default" type="submit" value="Pesquisar" asp-controller="Eventos" asp-action="Index"/>
   <a class="btn btn-primary" role="button" asp-controller="Eventos" asp-action="Criar">Adicionar novo evento </a>
   
    <br />
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Titulo</th>
          <th scope="col">Data</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        @foreach(Evento evento in ViewBag.eventos)
        {
        <tr>
          <td>@evento.Titulo</td>
          <td>@Html.DisplayFor(x => @evento.Data_Hora)</td>
          <td> 
            <div class="btn-group" role="group">
              <a role="button" class="btn btn-primary" 
                   asp-route-id="@evento.Id_Evento" asp-controller="Eventos" asp-action="Editar">Editar</a>
              <a role="button" class="btn btn-danger"
                    asp-route-id="@evento.Id_Evento" asp-controller="Eventos" asp-action="Apagar">Apagar</a>
            </div>
          </td>
        </tr>
        }
      </tbody>
    </table>
}
</div>
