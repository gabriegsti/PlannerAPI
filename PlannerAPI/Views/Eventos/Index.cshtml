
@{
    ViewData["Title"] = "Eventos";
}

<div class="text-center">  
    <h1 class="display-4">Eventos</h1>
    <div class="">
        <a class="btn btn-primary" role="button" asp-controller="Eventos" asp-action="Criar">Adicionar novo evento </a>
    </div>
    <br />
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Titulo</th>
          <th scope="col">Data</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        @foreach(Evento evento in ViewBag.eventos)
        {
        <tr>
          <td>@evento.Titulo</td>
          <td>@Html.DisplayFor(x => @evento.Data_Hora)</td>
          <td> 
            <div class="btn-group" role="group">
              <a role="button" class="btn btn-primary" 
                    asp-controller="Eventos" asp-action="Editar">Editar</a>
              <a role="button" class="btn btn-danger"
                    asp-controller="Eventos" asp-action="Apagar">Apagar</a>
            </div>
          </td>
        </tr>
        }
      </tbody>
    </table>
</div>
